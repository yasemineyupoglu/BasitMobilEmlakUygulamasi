<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".HomeActivity"
    android:background="@drawable/arkaplan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/addphoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"/>

        <EditText
            android:id="@+id/EditEvAdi"
            android:layout_below="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EvAdi"
            android:layout_centerHorizontal="true"
            android:ems="15"/>

        <EditText
            android:id="@+id/EditEvAdres"
            android:layout_below="@+id/EditEvAdi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EvAdresi"
            android:layout_centerHorizontal="true"
            android:ems="15"/>

        <EditText
            android:id="@+id/EditEvKonum"
            android:layout_below="@+id/EditEvAdres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="EvBilgi(Oda sayisi, ücret)"
            android:layout_centerHorizontal="true"
            android:ems="15"/>

        <Button
            android:id="@+id/BtnKaydet"
            android:layout_below="@+id/EditEvKonum"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="KAYDET"
            style="@style/Widget.AppCompat.Light.PopupMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/BtnListele"
            android:layout_below="@+id/BtnKaydet"
            android:layout_centerHorizontal="true"
            android:minWidth="160dp"
            android:text="LİSTELE"
            style="@style/Widget.AppCompat.Light.PopupMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        </RelativeLayout>
</ScrollView>